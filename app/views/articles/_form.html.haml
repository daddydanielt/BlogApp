%h3.text-center Adding New Article
.row
  .col-md-12
    = form_for @article, html: {class: "form-horizontal", role: "form"} do |f|
      - if @article.errors.any?
        .panel.panel-danger.col-md-offset-1
          .panel-heading
            %h2.panel-title
              = pluralize @article.errors.count, "error"
              prohibited this article from being saved:
            .panel-body
              %ul
                - @article.errors.full_messages.each do |msg|
                  %li #{msg}
      .form-group
        = f.label :title, class: "col-sm-2 control-label"
        .col-sm-10
          = f.text_field :title, class: "form-control", placeholder: "Title of artilce", autofocus: true
      .form-group
        = f.label :body, class: "col-sm-2 control-label"
        .col-sm-10
          = f.text_area :body, class: "form-control", rows:10, placeholder: "Body of artilce"
      .form-group
        .col-sm-offset-1.col-sm-11
          = f.submit class: "btn btn-primary btn-lg pull-right"
